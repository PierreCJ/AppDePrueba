#:import utils kivy.utils
<Wm>
	id: principal
	orientation:"vertical"
	padding: 10
	spacing: 5
	canvas:
		Color:
			rgb:1,1,0.2
		Rectangle:
			size:self.size
			pos:self.pos
	Button:
		text: principal.texto
		on_press:root.cambiarVar()

	Button:
		text: principal.texVarBol
		on_press:root.valorBolean()

	BoxLayout:
		spacing: 0
		orientation: 'vertical'
		canvas:
			Color:
				rgb:(1,0,1)
				#rgb: utils.get_color_from_hex("#09A3AD")
			Rectangle:
				size: self.size
				pos:self.pos

		Label:
			text: "Tamao Fuente Numeric Property"
			font_size: principal.tamFuen
			

		BoxLayout:
			canvas:
				Color:
					rgb:(1,0,0)
					#rgb: utils.get_color_from_hex("#09A3AD")
				Rectangle:
					size: self.size
					pos:self.pos

			size_hint_y:  None
			
			height: 40
			spacing: 10
			
			SmoothButton:
				text: 'Aumentar'
				on_press: root.numerProAum()
				size_hint_y: None
				
				height: 35
				pos:0,60
				back_color:(0.157,0.455,0.753,1.0)
				border_radius:[1,2,15,20]#si-sd-id-ii(s-superior,i-izquierda)


				# background_color: (0, 0.2, 0.5, 1)
				# background_normal: ''

			StrokeButton:
				text: 'Disminuir'
				on_press: root.numerProDis()
				size_hint: 1, None
				
				height: 35
				#pos: 200,20
				back_color:(0.157,0.455,0.753,1.0)
				#background_color: (0, 0.2, 0.5,1)
				#background_normal: ''




<SmoothButton@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	back_color:(0,1,0,1)
	border_radius:[20]
	canvas.before:
		Color:
			rgba: self.back_color 
		RoundedRectangle:
			size: self.size 
			pos: self.pos 
			radius:self.border_radius

<StrokeButton@Button>
	background_color: (0, 0, 0, 0)
	background_normal: ''
	back_color:(0,0,1,1)
	border_radius:18
	canvas.before:
		Color: 
			rgba:self.back_color 
		Line:
			rounded_rectangle:(self.pos[0],self.pos[1],self.size[0],self.size[1],self.border_radius)
			width:1.2